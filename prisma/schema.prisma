generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  password       String
  role           Role      @default(STUDENT)
  avatar         String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Teacher relations
  teacherClasses Class[]   @relation("TeacherClasses")

  // Student relations
  enrollments    Enrollment[]
  submissions    Submission[]

  @@map("users")
}

model Class {
  id          String       @id @default(cuid())
  name        String
  description String?
  code        String       @unique
  subject     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Teacher relation
  teacherId   String
  teacher     User         @relation("TeacherClasses", fields: [teacherId], references: [id], onDelete: Cascade)

  // Student enrollments
  enrollments Enrollment[]

  // Assessments in this class
  assessments Assessment[]

  @@map("classes")
}

model Enrollment {
  id        String   @id @default(cuid())
  joinedAt  DateTime @default(now())

  studentId String
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([studentId, classId])
  @@map("enrollments")
}

model Assessment {
  id                  String       @id @default(cuid())
  title               String
  markScheme          String       // Extracted text from all mark scheme files
  markSchemePdfUrl    String?      // Legacy: Original PDF URL (kept for backwards compatibility)
  markSchemeFileUrls  String?      // JSON array of file URLs (supports PDF, images, Word, Excel)
  totalMarks          Int
  status              AssessmentStatus @default(ACTIVE)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  // Class relation
  classId     String
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)

  // Student submissions
  submissions Submission[]

  @@map("assessments")
}

model Submission {
  id              String           @id @default(cuid())
  imageUrls       String           // JSON array of image paths
  extractedText   String?          // OCR extracted text
  score           Int?
  maxScore        Int?
  feedback        String?          // AI generated feedback
  status          SubmissionStatus @default(PENDING)
  gradedAt        DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Manual score adjustment by teacher
  originalScore   Int?             // Original AI-generated score (stored when teacher adjusts)
  adjustedBy      String?          // Teacher ID who made the adjustment
  adjustmentReason String?         // Reason for the adjustment
  adjustedAt      DateTime?        // When the adjustment was made

  // Relations
  studentId       String
  student         User             @relation(fields: [studentId], references: [id], onDelete: Cascade)

  assessmentId    String
  assessment      Assessment       @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@unique([studentId, assessmentId])
  @@map("submissions")
}

enum Role {
  STUDENT
  TEACHER
}

enum AssessmentStatus {
  DRAFT
  ACTIVE
  CLOSED
}

enum SubmissionStatus {
  PENDING
  PROCESSING
  GRADED
  ERROR
}
